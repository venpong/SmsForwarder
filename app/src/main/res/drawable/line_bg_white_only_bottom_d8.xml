<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 连框颜色值 -->
    <item>
        <shape>
            <corners android:radius="0dp" />
            <solid android:color="#757575" />
        </shape>
    </item>
    <!-- 主体背景颜色值 -->
    <item
        android:bottom="1dp"
        android:left="0dp"
        android:right="0dp"
        android:top="0dp">
        <shape>
            <corners android:radius="0dp" />
            <solid android:color="@color/white" />
        </shape>
    </item>
</layer-list>
